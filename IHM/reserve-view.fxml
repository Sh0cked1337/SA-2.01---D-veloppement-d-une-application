<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ReserveController" hgap="10" vgap="10">
    <Label text="Nom Client:"/>
    <TextField fx:id="nomTextField" GridPane.columnIndex="1"/>
    <Label text="Prénom Client:" GridPane.rowIndex="1"/>
    <TextField fx:id="prenomTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Nom Spectacle:" GridPane.rowIndex="2"/>
    <TextField fx:id="spectacleTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button text="Réserver" onAction="#handleReserve" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>
